{
  "manifest_version": 3,
  "name": "Unbreakable Password Generator",
  "version": "3.0.1",
  "description": "100% offline, cryptographically secure password generation. Zero network requests. Zero trust required.",
  
  "permissions": [
    "clipboardWrite"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "lock16.png",
      "48": "lock48.png",
      "128": "lock128.png"
    },
    "default_title": "Generate Secure Password"
  },
  
  "icons": {
    "16": "lock16.png",
    "48": "lock48.png",
    "128": "lock128.png"
  },
  
  "options_page": "options.html",
  
  "background": {
    "service_worker": "background.js"
  },
  
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Open Unbreakable Password Generator"
    }
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  
  "offline_enabled": true,
  
  "author": "James Bryan",
  "homepage_url": "https://github.com/jbryan79/Unbreakable"
}
